+  angularMeteor,
+  ngMaterial,
+  ngSanitize,
+  uiRouter,
+  PartiesList,
+  PartyDetails,
+  Navigation,
+  Auth,
+  'accounts.ui',
+  'ionic'
+]).component(name, {
+  template,
